{% extends 'base.html.twig' %}

{% block title %}Liste des clients{% endblock %}

{% block body %}
<div class="container">
    <h1 class="my-4">Liste des clients</h1>

    <form method="get" action="{{ path('client.index') }}" class="mb-4">
        <div class="row">
            <div class="col-md-4">
                <label for="surname" class="form-label">Filtrer par surname :</label>
                <input type="text" name="surname" id="surname" class="form-control" value="{{ surname }}">
            </div>
            <div class="col-md-4">
                <label for="phone" class="form-label">Filtrer par tel :</label>
                <input type="text" name="telephone" id="telephone" class="form-control" value="{{ telephone }}">
            </div>
            <div class="col-md-4 align-self-end">
                <button type="submit" class="btn btn-primary mt-2">Filtrer</button>
                <a href="{{ path('client.index') }}" class="btn btn-secondary mt-2">Réinitialiser</a>
            </div>
            <div><div class="d-flex justify-content-end mb-3">
                <a href="{{ path('client_create') }}" class="btn btn-primary">Créer un Client</a>
            </div>
         </div>
        </div>
    </form>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Surname</th>
                <th>Téléphone</th>
                <th>Adresse</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for client in clients %}
                <tr>
                    <td>{{ client.surname }}</td>
                    <td>{{ client.telephone }}</td>
                    <td>{{ client.adresse }}</td>
                    <td>
                       <a href="{{ path('dette_list_by_client', {id: client.id}) }}" class="btn btn-primary">Voir dettes</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="4" class="text-center">Aucun client trouvé.</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <div class="pagination justify-content-center">
        {{ knp_pagination_render(clients) }}
    </div>
</div>
{% endblock %}
